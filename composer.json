{
    "name": "he426100/php-mcp-server",
    "type": "project",
    "require": {
        "he426100/mcp-sdk-php": "^1.1",
        "chrome-php/chrome": "^1.13"
    },
    "autoload": {
        "psr-4": {
            "He426100\\McpServer\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.0",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "analyse": "phpstan analyse --memory-limit 500M -l 5 -c phpstan.neon.dist ./src"
    }
}
