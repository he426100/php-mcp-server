#!/usr/bin/env php
<?php

// 启用错误报告
ini_set('display_errors', 1);
ini_set('display_startup_errors', 1);
ini_set('log_errors', 1);
ini_set('memory_limit', '1G');
error_reporting(E_ALL);
date_default_timezone_set('PRC');

! defined('BASE_PATH') && define('BASE_PATH', dirname(__DIR__));
require BASE_PATH . '/vendor/autoload.php';

use Symfony\Component\Console\Application;
use He426100\McpServer\Command\TestServerCommand;
use He426100\McpServer\Command\WeidianBarcodeServerCommand;
use He426100\McpServer\Command\MySqlServerCommand;
use He426100\McpServer\Command\JsonConverterCommand;
use He426100\McpServer\Command\Base64ServerCommand;

ini_set('error_log', BASE_PATH . '/runtime/php_errors.log');

(function () {
    $application = new Application('MCP SDK Examples', '1.0.0');
    $application->add(new TestServerCommand());
    $application->add(new WeidianBarcodeServerCommand());
    $application->add(new MySqlServerCommand());
    $application->add(new JsonConverterCommand());
    $application->add(new Base64ServerCommand());
    $application->run();
})();
